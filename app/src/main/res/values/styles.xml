<resources>
    <!-- ActionBar required for SettingsActivity -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--        <item name="colorPrimary">@color/white</item>-->
        <!--        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>-->
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--        <item name="colorOnPrimary">@color/colorOnPrimary</item>-->
        <!--        <item name="colorSecondary">@color/colorSecondary</item>-->
        <!--        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>-->
        <!--        <item name="colorOnSecondary">@color/colorOnSecondary</item>-->
        <!--        <item name="android:statusBarColor">@color/colorStatusBar</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <!-- tbsdf -->
    <style name="TBSDFButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">normal</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">0.5dp</item>
    </style>

    <style name="TBSDFButton.Icon" parent="TBSDFButton">
        <item name="android:fontFamily">@font/material_design_icons</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- rv_item_transactions_day/summary -->
    <style name="SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RvItemTransactionsCard">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="RvItemTransactionsDayHeader" parent="SmallText" />

    <style name="RvItemTransactionsDayHeader.Hint">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="RvItemTransactionsDayHeader.Currency">
        <item name="android:paddingEnd">2dp</item>
    </style>

    <!-- fragment_category_edit -->
    <style name="FullWidthMaterialEditTextContainer" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="FullWidthMaterialEditTextContainer.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintAnimationEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="FullWidthMaterialEditText">
        <item name="android:singleLine">true</item>
    </style>
    <style name="FullWidthMaterialEditText.ExposedDropdownMenu">
        <item name="android:dropDownWidth">match_parent</item>
    </style>

</resources>