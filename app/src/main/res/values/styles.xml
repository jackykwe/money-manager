    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

<!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

<!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="behavior_peekHeight">400dp</item>
    </style>


    <!-- rv_item_transactions_day/summary -->
    <style name="SmallText">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="RvItemTransactionsCard">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>
    <style name="RvItemTransactionsDayHeader" parent="SmallText" />
    <style name="RvItemTransactionsDayHeader.Hint">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>
    <style name="RvItemTransactionsDayHeader.Currency">
        <item name="android:paddingEnd">2dp</item>
    </style>


</resources>