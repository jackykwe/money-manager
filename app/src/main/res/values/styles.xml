<resources>
    <!-- ActionBar required for SettingsActivity -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.MyApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MyApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MyApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MyApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MyApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MyApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MyApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MyApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MyApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MyApp.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MyApp.Caption3</item>
        <item name="textAppearanceButton">@style/TextAppearance.MyApp.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MyApp.Overline</item>

        <!--        <item name="colorPrimary">@color/white</item>-->
        <!--        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>-->
        <!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--        <item name="colorOnPrimary">@color/colorOnPrimary</item>-->
        <!--        <item name="colorSecondary">@color/colorSecondary</item>-->
        <!--        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>-->
        <!--        <item name="colorOnSecondary">@color/colorOnSecondary</item>-->
        <!--        <item name="android:statusBarColor">@color/colorStatusBar</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!--    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->

    <!--    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <!-- Override Material Defaults -->
    <style name="TextAppearance.MyApp.Headline1" parent="TextAppearance.MaterialComponents.Headline1"></style>

    <style name="TextAppearance.MyApp.Headline2" parent="TextAppearance.MaterialComponents.Headline2"></style>

    <style name="TextAppearance.MyApp.Headline3" parent="TextAppearance.MaterialComponents.Headline3"></style>

    <style name="TextAppearance.MyApp.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.MyApp.Headline5" parent="TextAppearance.MaterialComponents.Headline5"></style>

    <style name="TextAppearance.MyApp.Headline5.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyApp.Headline6" parent="TextAppearance.MaterialComponents.Headline6"></style>

    <style name="TextAppearance.MyApp.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1"></style>

    <style name="TextAppearance.MyApp.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2"></style>

    <style name="TextAppearance.MyApp.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.MyApp.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.MyApp.Body2.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyApp.Body3" parent="TextAppearance.MyApp.Body2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.MyApp.Body3.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MyApp.Body4" parent="TextAppearance.MyApp.Body2">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.MyApp.Caption1" parent="TextAppearance.MyApp.Caption3">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.MyApp.Caption2" parent="TextAppearance.MyApp.Caption3">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MyApp.Caption3" parent="TextAppearance.MaterialComponents.Caption"></style>

    <style name="TextAppearance.MyApp.Caption4" parent="TextAppearance.MyApp.Caption3">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.MyApp.Button" parent="TextAppearance.MaterialComponents.Button"></style>

    <style name="TextAppearance.MyApp.Overline" parent="TextAppearance.MaterialComponents.Overline"></style>

    <!-- tbsdf -->
    <style name="TBSDFButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">52dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Headline5</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TBSDFButton.Icon" parent="TBSDFButton">
        <item name="android:fontFamily">@font/material_design_icons</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AccountDisplayStrip">
        <!-- TODO: Text colour dependent on colour of background -->
        <!-- TODO: onColour system in color.xml & ColourHandler -->
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Headline5.Bold</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- rv_item_transactions_day/summary -->
    <style name="RvItemTransactionsCard">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPaddingLeft">0dp</item>
        <item name="contentPaddingRight">0dp</item>
        <item name="contentPaddingTop">8dp</item>
        <item name="strokeColor">@color/stroke_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="RvItemTransactionsDayHeader">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Body3</item>
    </style>

    <style name="RvItemTransactionsDayHeader.Hint">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="RvItemTransactionsDayHeader.Currency">
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Caption4</item>
        <item name="android:paddingEnd">2dp</item>
    </style>

    <style name="RvItemtransactionsSummaryAmount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeMaxTextSize">16sp</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Body1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <!-- fragment_account_category_edit -->
    <style name="FullWidthMaterialEditTextContainer" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintAnimationEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="FullWidthMaterialEditTextContainer.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintAnimationEnabled">false</item>
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="FullWidthMaterialEditText">
        <item name="android:singleLine">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Body1</item>
    </style>

    <style name="FullWidthMaterialEditText.ExposedDropdownMenu">
        <item name="android:dropDownWidth">match_parent</item>
    </style>

    <!-- fragment_transaction_edit -->
    <style name="Details">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="Details.Text">
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Body1</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="Details.Hint">
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Caption2</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Details.Hint.Colon">
        <item name="android:paddingEnd">0dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Details.Currency">
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Caption2</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <!-- rv_item_detail_X_summary -->
    <style name="ChartComponentsLine" parent="RVItemDetailXBodyCard">
        <item name="contentPaddingBottom">8dp</item>
        <item name="contentPaddingLeft">4dp</item>
        <item name="contentPaddingRight">8dp</item>
    </style>

    <!-- rv_item_detail_X_body -->
    <style name="RVItemDetailXBodyCard" parent="RvItemTransactionsCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="RVItemDetailXBodyLL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RVItemDetailXBodyLLCL">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingHorizontal">8dp</item>
    </style>

    <style name="RVItemDetailXBodyRangeTV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Body2.Bold</item>
    </style>

    <style name="RVItemDetailXBodyCardRangeCurrencyTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Caption3</item>
    </style>

    <style name="RVItemDetailXBodyRangeAmountTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MyApp.Body2</item>
    </style>

</resources>