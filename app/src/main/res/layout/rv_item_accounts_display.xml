<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="account"
            type="com.kaeonx.moneymanager.userrepository.domain.Account" />

        <variable
            name="onClickListener"
            type="com.kaeonx.moneymanager.fragments.accounts.AccountOnClickListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:onClick="@{() -> onClickListener.onClick(account)}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/horizontalBarIV"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:scaleType="fitXY"
            android:tint="@color/grey_500"
            android:visibility="@{account.name == `Add...` ? View.INVISIBLE : View.VISIBLE}"
            app:horizontalBarIV_tint="@{account.colourString}"
            app:srcCompat="@drawable/basic_rectangle" />

        <TextView
            android:id="@+id/accountNameTV"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="top"
            android:fontFamily="@font/fira_sans"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:accountNameTV_text="@{account.name}"
            app:accountNameTV_textColor="@{account.name}"
            tools:text="Cash" />

    </FrameLayout>
</layout>